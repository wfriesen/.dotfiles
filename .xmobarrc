Config { font = "xft:Hack:size=12"
        , borderColor = "black"
        , border = TopB
        , bgColor = "#002b36"
        , fgColor = "#657b83"
        , position = TopW L 96
        , commands = [  Run DynNetwork [ "--template" , "<rx>kB/s ▼▲ <tx>kB/s" ] 10
                      , Run MultiCpu  [ "--template", "Cpu: <total0> <total1> <total2> <total3>"
                                      , "--Low"      , "50"
                                      , "--High"     , "85"
                                      , "--low"      , "darkgreen"
                                      , "--normal"   , "darkorange"
                                      , "--high"     , "darkred"
                                      ] 10
                      , Run Com "/home/william/bin/volume.sh" [] "vol" 10
                      , Run Memory ["-t","Mem: <usedratio>%"] 10
                      , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                      , Run StdinReader
                      , Run Battery [ "--template" , "Batt: <acstatus>"
                                    , "--Low"      , "10"        -- units: %
                                    , "--High"     , "80"        -- units: %
                                    , "--low"      , "darkred"
                                    , "--normal"   , "darkorange"
                                    , "--high"     , "darkgreen"

                                    , "--" -- battery specific options
                                              -- discharging status
                                              , "-o"	, "<left>% (<timeleft>)"
                                              -- AC "on" status
                                              , "-O"	, "<left>% (<timeleft>) <fc=#dAA520>Charging</fc>"
                                              -- charged status
                                              , "-i"	, "<fc=#006000>Charged</fc>"
                                    ] 50
                      ]
        , sepChar = "%"
        , alignSep = "}{"
        , template = "%StdinReader% }{ %multicpu% | %memory% | %dynnetwork% | Vol: %vol% | %battery% | <fc=#93a1a1>%date%</fc>"
        }
